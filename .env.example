# Core API credentials
ZAI_API_KEY=


# Orchestrator runtime configuration
NODE_ENV=production
LOG_LEVEL=debug
MAX_ITERATIONS=12
MAX_RETRIES=3
DEFAULT_TIMEOUT=600000           # ms
MAX_CONCURRENT_OPS=5
API_TIMEOUT_MS=3000000           # ms

# Claude Code / Anthropic via Z.AI
CLAUDE_CODE_AUTO_APPROVE=1
ANTHROPIC_BASE_URL=https://api.z.ai/api/anthropic
ANTHROPIC_DEFAULT_HAIKU_MODEL=glm-4.5-air
ANTHROPIC_DEFAULT_SONNET_MODEL=glm-4.6
ANTHROPIC_DEFAULT_OPUS_MODEL=glm-4.6
CLAUDE_CODE_MAX_OUTPUT_TOKENS=64000
MAX_THINKING_TOKENS=32000
CLAUDE_CODE_MAX_PARALLEL_TOOL_CALLS=2
ANTHROPIC_MAX_PARALLEL_TOOL_CALLS=2
# Note: docker-compose maps ANTHROPIC_AUTH_TOKEN=${ZAI_API_KEY}

# Optional integrations
GITHUB_TOKEN=
PG_URL=

# Discord integration (you create the server and invite the bot)
DISCORD_BOT_TOKEN=
DISCORD_GUILD_ID=                # preferred (stable)
DISCORD_GUILD_NAME=Auto Claude Project
DISCORD_CATEGORY_NAME=project    # category (group) created/ensured by bot
DISCORD_STATUS_CHANNEL=status-updates
DISCORD_FEEDBACK_CHANNEL=feedback
STATUS_UPDATE_INTERVAL_MINUTES=30

# Path for project
CLAUDE_BASE_WORKSPACE_DIR=
CLAUDE_PROJECT_NAME=   